@charset "utf-8";
/* CSS Document */

body{
	background-color:#f5f5f5;
}

/* 商品评论 */
.commentTabs {
	height: 1.16rem;
	border-bottom: 1px solid #d7d7d7;
	background-color:#fff;
}
.commentTabs ul {
	display: -webkit-box;
    display: -webkit-flex;
    display: flex;
	width: 100%;
	height: 1.16rem;
}
.commentTabs ul li {
	-webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
	display: block;
	line-height: 1.16rem;
	text-align: center;
}
.commentTabs ul li.current {
	border-bottom: .08rem solid #801da1;
	color: #801da1;
}
.commentCon {
	width: 100%;
	overflow-x: hidden;
}
.commentCon #page-content {
	width: 100%;
}
.commentCon #page-content > div {
	width:100%;
	position:absolute;
}
.comList{
	padding:.32rem;
	border-bottom: .2666rem solid #f1f1f1;
	background-color:#fff;
}
.comList p{
	font-size:.32rem;
}
.comList_title{
	border-bottom:1px solid #d7d7d7;
	padding-bottom:.12rem;
}
.comList_title img{
	width:1.1rem;
	height:1.1rem;
	display:inline;
}
.comList_title span{
	line-height:1.1rem;
	display:inline-block;
	vertical-align:top;
}
.comList_title em{
	float:right;
	color:#999;
	line-height:1.1rem;
}
.star {
	position: relative;
	width:100%;
	height:.5rem;
	margin:.32rem auto;
}
.star li {
	float: left;
	color: #ffde00;
	font-size:.42rem;
	margin-right:.2rem;
}
.star > span{
	color:#999;
	font-size:.266667rem;
	float:right;
}
.comPics{
	clear:both;
	margin-top:.32rem;
}
.comPics a{
	float:left;
	margin-right:.24rem;
}
.comPics img{
	width:2rem;
	height:2rem;
	border:1px solid #d7d7d7;
}
.myList{
	border-bottom:1px solid #d7d7d7;
	padding-bottom:.24rem;
}
.myList a {
    width:1.72rem;
    height:1.72rem;
    border: 1px solid #d7d7d7;
    background-color: #fff;
    float: left;
    font-size: 0;
    overflow: hidden;
    margin-right: .32rem;
}
.myList > a img{
	display:block;
	width:100%;
	height:100%;
}
.myList .gd_info {
    position: relative;
    /* width: 70%; */
    overflow: hidden;
}
.myList .gd_info .name {
    width: 100%;
    line-height: .54rem;
    height: 1.08rem;
    margin: 0 0 .24rem;
    font-size: .32rem;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
}
.myList .gd_info .value {
    color: #666;
    font-size: .32rem;
    font-weight: bold;
}

.confirmBtns {
    border-top: 1px solid #d1d1d1;
    padding: .18rem .32rem;
    text-align: right;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #fff;
    z-index: 21;
}
.confirmBtns .confirmLeft{
	float:left;
	padding-top:.24rem;
}
.confirmBtns .confirmLeft span{
	margin-left:.24rem;
	font-size:.32rem;
}
.confirmBtns a.confirm_btn {
    display: inline-block;
    background-color: #dd1847;
    color: #fff;
    border-radius: 20px;
    line-height: .94rem;
    border: 1px solid #dd1847;
    width: 40%;
    text-align: center;
    margin: 0 2%;
}
.confirmBtns .checkboxRed {
    width:.43rem;
    height: .43rem;
    background: #CD0933;
    float: left;
    border-radius: 100%;
    position: relative;
    background: url(../images/checkbox-off.png) no-repeat center;
    background-size: 100% 100%;
    padding: 0;
}
.confirmBtns .checkboxRed input {
    background: none;
    width: .43rem;
    height: .43rem;
    position: relative;
    z-index: 3;
    -webkit-appearance: none;
    outline: none;
	border:0;
    /* visibility: hidden; */
}
.confirmBtns .checkboxRed label {
    display: block;
    width: .43rem;
    height: .43rem;
    border-radius: 100%;
    cursor: pointer;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}
.confirmBtns .checkboxRed input[type=checkbox]:checked + label,.confirmBtns .checkboxRed input[class=default] + label {
    background: none;
    background: url(../images/checkbox-on2.png) no-repeat center;
    background-size: 100% 100%;
}

/* 评价宝贝 */
.commentBaby{
	background-color:#fff;
}
.commentBaby .J_moveRight {
    position: relative;
    padding: 0 .32rem;
}
.commentBaby .J_moveRight > div {
    padding: .32rem 0;
}
.commentBaby .J_moveRight .img_wrap {
    width: 2.08rem;
    height: 2.08rem;
    padding: 2px;
    border: 1px solid #d7d7d7;
    background-color: #fff;
    float: left;
    font-size: 0;
    overflow: hidden;
    margin-right:.32rem;
}
.commentBaby .J_moveRight .img_wrap img {
    width: 100%;
    height: 100%;
}
.commentBaby .J_moveRight .gd_info {
    position: relative;
    /* width: 70%; */
    overflow: hidden;
}
.commentBaby .J_moveRight .gd_info .name {
    width: 100%;
    line-height: .54rem;
    height: 1.08rem;
    margin: 0 0 .4rem;
    font-size: .32rem;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
}
.commentBaby .J_moveRight .gd_info .value {
    color: #666;
    font-size: .32rem;
    font-weight: bold;
}
.comment_area{
	padding:.16rem .16rem .4rem .32rem;
}
.comment_area > span{
	float:left;
	line-height:.32rem;
	font-size:.32rem;
}
.comment_area > span em{
	width:.08rem;
	display:inline-block;
	background-color:#ed1946;
	height:.32rem;
	margin-right:.12rem;
	position:relative;
	top:.04rem;
}
.comment_area .parentCls{
	float:right;
}
.comment_area .parentCls .star{
	width:auto;
	margin:0;
}
.comment_area_con{
	clear:both;
	padding:0 .32rem;
}
.comment_area_con .textArea{
	background-color:#f5f5f5;
	padding:.12rem;
}
.comment_area_con textarea{
	height:1.25rem;
	line-height:.5rem;
	width:100%;
	background:none;
	color:#666;
}
.comment_area_con > a{
	padding:.36rem .36rem .2rem;
	float:left;
	display:block;
}
.comment_area_con > a i{
	width:.6rem;
	height:.506667rem;
	background:url(../images/photoIcon.png) no-repeat;
	background-size:100%;
	display:block;
}
.commentBaby_list{
	border-bottom:.266667rem solid #f5f5f5;
	padding-bottom:.32rem;
}
.comment_area_pic{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
	padding:.16rem;
}
.comment_area_pic a{
	display: block;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	padding:2px;
	border: 1px solid #d7d7d7;
	margin:.16rem;
}
.comment_area_pic a img{
	width:100%;
}